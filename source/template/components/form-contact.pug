  label.field
    input(type="text" name="name" placeholder="Имя").field__input
    span.field__error-msg Введите имя

  label.field
    input(type="text" name="email" placeholder="Еmail").field__input
    span.field__error-msg Введите емейл

  label.field
    textarea( name="message" placeholder="Ваше сообщение").field__input.field__input_textarea
